class Solution {
    public int longestValidParentheses(String s) {
        Stack<Integer>st=new Stack<>();
        st.push(-1);
        int mL=0;//ml=max length
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='('){
                st.push(i);
            } else{
                st.pop();
                if(st.isEmpty()){
                    st.push(i);
                } else{
                    mL=Math.max(mL,i-st.peek());
                }
            }
        }
        return mL;
    }
}
